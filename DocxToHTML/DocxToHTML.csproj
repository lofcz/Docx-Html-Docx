<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFrameworks>net462;net8.0-windows</TargetFrameworks>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<AssemblyTitle>DocxToHTML</AssemblyTitle>
		<Product>DocxToHTML</Product>
		<ApplicationIcon>geek.ico</ApplicationIcon>
		<UseWindowsForms>true</UseWindowsForms>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<SignAssembly>True</SignAssembly>
		<AssemblyOriginatorKeyFile>..\DocxToHTML.snk</AssemblyOriginatorKeyFile>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="System.Resources.Extensions" Version="8.0.0" />
	</ItemGroup>
	<ItemGroup>
		<Compile Update="Master.cs">
			<SubType>Form</SubType>
		</Compile>
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\DocxToHTML.Converter\DocxToHTML.Converter.csproj" />
		<ProjectReference Include="..\HTMLtoDOCX.Converter\HTMLtoDOCX.Converter.csproj" />
	</ItemGroup>
	<ItemGroup>
		<Content Include="EditorInit.html">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="geek.ico" />
	</ItemGroup>
</Project>